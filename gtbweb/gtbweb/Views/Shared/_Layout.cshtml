    <div class="container">
          @if (SignInManager.IsSignedIn(User))
{
      <a class="navbar-brand js-scroll" asp-area="" asp-controller="Video" asp-action="Video">DevFolio</a>
}
else{
      <a class="navbar-brand js-scroll"  asp-area="" asp-controller="Home" asp-action="Index">DevFolio</a>
}
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault"
        aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
      </button>
              @if (SignInManager.IsSignedIn(User))
{
      <div class="navbar-collapse collapse justify-content-end" id="navbarDefault">
        <ul class="navbar-nav flex-grow-1">
          
          <li class="nav-item">
            <a class="nav-link js-scroll"  asp-area="" asp-controller="Video" asp-action="Video">Videos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll"  asp-area="" asp-controller="Blog" asp-action="Blog">Posts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll"  asp-area="" asp-controller="Contact" asp-action="Contact">Contact</a>
          </li>
        </ul>
        <partial name="_LoginPartial" />
      </div>
}
else
{
    <div class="navbar-collapse collapse justify-content-end" id="navbarDefault">
        
        <partial name="_LoginPartial" />
      </div>
}
